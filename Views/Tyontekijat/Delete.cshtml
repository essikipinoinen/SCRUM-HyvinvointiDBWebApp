@model Hyvinvointisovellus.Tyontekijat

@{
    ViewBag.Title = "Delete";
}
<p></p>
<div class="jumbotron">
	<h1>Työntekijät</h1>
	<p class="lead">
		Poista työntekijöitä.
	</p>
	@*<p><a href="~/Home/Palautteet" class="btn btn-primary btn-lg">Lue palautteita  &raquo;</a></p>*@ @*<-- jumbotronin button, tarvitaanko?*@
</div>

<h3>Haluatko varmasti poistaa tämän työntekijän?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Etunimi)</dt>
        <dd>@Html.DisplayFor(model => model.Etunimi)</dd>
        <dt>@Html.DisplayNameFor(model => model.Sukunimi)</dt>
        <dd>@Html.DisplayFor(model => model.Sukunimi)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Poista" class="btn btn-danger" onclick="meth_alert();" />
            <a class="btn btn-secondary" href="/Tyontekijat">Takaisin</a>
        </div>

        <script type="text/javascript">
            meth_alert = function () {

                alert("Työntekijä poistettu listalta!");
            };
        </script>

    }
</div>