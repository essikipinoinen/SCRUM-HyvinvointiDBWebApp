@model IEnumerable<Hyvinvointisovellus.Models.Kayttajat>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

@{
    ViewBag.Title = "Index";
}

@section scripts {
    <script type="text/javascript">
@* JQuery joka suoritetaan kun klikataan luoUusiTyontekija - luokan mukaista elementtiä, lisäys *@
        $(function () {
            $(".luoUusiTyontekija").click(function () {
                let tyontekijaId = $(this).data("tyontekijaid");
                console.log("Klikkasit uuden työntekijän lisäyspainiketta: " + tyontekijaId);
                var url = "/Tyontekijat/_ModalCreate/?id=";
                console.log(url);

                $("#tyontekijaCreate").append(" <b> Avataan työntekijän lisäys-ikkuna...</b>");

                var $tyontekijaDivCreate = $("#tyontekijaCreate");
                $.get(url, function (data) {
                    $tyontekijaDivCreate.replaceWith(data);
                    $("#ModalTyontekijaCreate").modal("show");
                });
            });
        });
        @* JQuery joka suoritetaan kun klikataan muokkaaTyontekijaId - luokan mukaista elementtiä, muokkaus *@
        $(function () {
            $(".muokkaaTyontekijaId").click(function () {
                let tyontekijaId = $(this).data("tyontekijaid");
                console.log("Klikkasit työntekijanumeroa: " + tyontekijaId);
                var url = "/Tyontekijat/_ModalEdit/?id=" + tyontekijaId;
                console.log(url);

                $("#tyontekijaEdit").append(" <b> Avataan työntekijän " + tyontekijaId + " muokkausikkuna...</b>");

                var $tyontekijaDivEdit = $("#tyontekijaEdit");
                $.get(url, function (data) {
                    $tyontekijaDivEdit.replaceWith(data);
                    $("#ModalTyontekijaEdit").modal("show");
                });
            });
        });
        @* JQuery joka suoritetaan kun klikataan naytaTyontekijaTiedot - luokan mukaista elementtiä, tietojen näyttö *@
        $(function () {
            $(".naytaTyontekijaTiedot").click(function () {
                let tyontekijaId = $(this).data("tyontekijaid");
                console.log("Klikkasit työntekijan" + tyontekijaId + " tietojen näyttöpainiketta: ");
                var url = "/Tyontekijat/_ModalDetails/?id=" + tyontekijaId;
                console.log(url);

                $("#tyontekijaDetails").append(" <b> Avataan työntekijän tiedot...</b>");

                var $tyontekijaDivDet = $("#tyontekijaDetails");
                $.get(url, function (data) {
                    $tyontekijaDivDet.replaceWith(data);
                    $("#ModalTyontekijaDetails").modal("show");
                });
            });
        });
        @* JQuery joka suoritetaan kun klikataan poistaTyontekijaId - luokan mukaista elementtiä, poisto *@
        $(function () {
            $(".poistaTyontekijaId").click(function () {
                let tyontekijaId = $(this).data("tyontekijaid");
                console.log("Klikkasit poistettavaa työntekijänumeroa: " + tyontekijaId);
                var url = "/Tyontekijat/_ModalDelete/?id=" + tyontekijaId;
                console.log(url);

                $("#tyontekijaDelete").append(" <b> Avataan työntekijän " + tyontekijaId + " poistoikkuna...</b>");

                var $tyontekijaDivDel = $("#tyontekijaDelete");
                $.get(url, function (data) {
                    $tyontekijaDivDel.replaceWith(data);
                    $("#ModalTyontekijaDelete").modal("show");
                });
            });
        });

        /* Tooltip scripti*/
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

    </script>
}

<div class="jumbotron">
    <h1>Työntekijät</h1>
    <p class="lead">
        Tarkastele työntekijöitä.
    </p>
    @*<p><a href="~/Home/Palautteet" class="btn btn-primary btn-lg">Lue palautteita  &raquo;</a></p>*@ @*<-- jumbotronin button, tarvitaanko?*@
</div>

<div>
    <button class="luoUusiTyontekija btn btn-success" data-toggle="tooltip" data-placement="right" title="Lisää uusi työntekijä">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-plus" viewBox="0 0 16 16">
            <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z" />
            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
        </svg>Lisää uusi työntekijä
    </button>
</div>

<div id="tyontekijaCreate"></div>
<div id="tyontekijaEdit"></div>
<div id="tyontekijaDetails"></div>
<div id="tyontekijaDelete"></div>

<p></p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Etunimi)</th>
        <th>@Html.DisplayNameFor(model => model.Sukunimi)</th>
        <th>@Html.DisplayNameFor(model => model.Osoite)</th>
        <th>@Html.DisplayNameFor(model => model.Postinumero)</th>
        <th>@Html.DisplayNameFor(model => model.Postitoimipaikat.Postitoimipaikka)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Etunimi)</td>
            <td>@Html.DisplayFor(modelItem => item.Sukunimi)</td>
            <td>@Html.DisplayFor(modelItem => item.Osoite)</td>
            <td>@Html.DisplayFor(modelItem => item.Postinumero)</td>
            <td>@Html.DisplayFor(modelItem => item.Postitoimipaikat.Postitoimipaikka)</td>
            <td align="right">
                <button class="muokkaaTyontekijaId btn btn-primary" data-toggle="tooltip" data-placement="right" title="Muokkaa tietoja" data-tyontekijaid="@item.KayttajaID">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                </button>
                <button class="naytaTyontekijaTiedot btn btn-success" data-toggle="tooltip" data-placement="right" title="Näytä tiedot" data-tyontekijaid="@item.KayttajaID">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                    </svg>
                </button>
                <button class="poistaTyontekijaId btn btn-danger" data-toggle="tooltip" data-placement="right" title="Poista työntekijä" data-tyontekijaid="@item.KayttajaID">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                </button>
            </td>

        </tr>
    }
</table>
<div>
    <a class="btn btn-outline-dark" href="/Home/IndexTyonantaja">Takaisin etusivulle</a>
</div>
