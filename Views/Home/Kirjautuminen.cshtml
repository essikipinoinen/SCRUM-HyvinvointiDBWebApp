@model Hyvinvointisovellus.Models.Kayttajat

@{
    ViewBag.Title = "Kirjautuminen";
}
<p></p>
<h3>Kirjautuminen</h3>


@using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KayttajaID)

    <div class="form-group">
        <p class="control-label col-md-2">Käyttäjätunnus</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Kayttajatunnus, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kayttajatunnus, "", new { @class = "text-danger" })
            <small id="kayttajaHelp" class="form-text text-muted">Syötä käyttäjätunnuksesi.</small>

        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Salasana</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Salasana, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Salasana, "", new { @class = "text-danger" })
            <small id="salasanaHelp" class="form-text text-muted">Syötä salasanasi.</small>

        </div>
    </div>

    @*<label class="text-danger">
        @Html.DisplayFor(model => model.LoginErrorMessage)
    </label>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kirjaudu" class="btn btn-success" />
            <p>Eikö sinulla ole vielä käyttäjätunnusta?  @Html.ActionLink("Rekisteröidy tästä!", "Rekisterointi", "Home")</p>
            @*@Html.ActionLink("Rekisteröityminen", "Rekisterointi", "Home")*@
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
