@model Hyvinvointisovellus.Models.Kayttajat

@{
	ViewBag.Title = "Kirjautuminen";
}

@using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<div class="center">
		<div class="login-form-horizontal">


			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.KayttajaID)

			<h3 class="text-center small-col-bottom-padding">Kirjautuminen</h3>
			<p class="text-center col-bottom-padding">Kirjaudu sisään käyttääksesi sovellusta.</p>

			<div class="form-group">
				<p class="control-label">Käyttäjätunnus</p>
				<div>
					@Html.EditorFor(model => model.Kayttajatunnus, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Kayttajatunnus, "", new { @class = "text-danger" })
					<small id="kayttajaHelp" class="form-text text-muted">Syötä käyttäjätunnuksesi.</small>
				</div>
			</div>

			<div class="form-group" style=" width: 300px; margin-left: auto; margin-right: auto;">
				<p class="control-label">Salasana</p>
				<div>
					@Html.EditorFor(model => model.Salasana, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
					@Html.ValidationMessageFor(model => model.Salasana, "", new { @class = "text-danger" })
					<small id="salasanaHelp" class="form-text text-muted">Syötä salasanasi.</small>
				</div>
			</div>

			@*<label class="text-danger">
					@Html.DisplayFor(model => model.LoginErrorMessage)
				</label>*@

			<br />

			<div class="form-group text-center">
				<div>
					<button type="submit" class="btn btn-success"><i class="fas fa-sign-in-alt icon-button"></i>Kirjaudu</button>
					<br /><br /><hr /><br />
					<p>Eikö sinulla ole vielä käyttäjätunnusta? <br />@Html.ActionLink("Rekisteröidy tästä!", "Rekisterointi", "Home")</p>
					@*@Html.ActionLink("Rekisteröityminen", "Rekisterointi", "Home")*@
				</div>
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
