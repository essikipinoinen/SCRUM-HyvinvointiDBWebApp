    @*<script type="text/javascript" src="~/Scripts/Skriptit/fullcalendar3.10.2.js"></script>*@
    @*<script type="text/javascript" src="~/Scripts/Skriptit/fullcalendarfinnish.js"></script>*@


    <!-- qTip js -->
