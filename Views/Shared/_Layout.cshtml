    @*<script type="text/javascript" src="~/Scripts/Skriptit/jquery.js"></script>*@


    <!-- DateTime picker js -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    @*<script type="text/javascript" src="~/Scripts/Skriptit/datetimepicker.js"></script>*@


</head>

