@model Hyvinvointisovellus.Models.Palaute

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<!-- The Modal -->
<div class="modal fade" id="ModalPalauteCreate">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Uuden palautteen lisääminen</h3>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("Create", "Palaute", FormMethod.Post, new { id = "createForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.KayttajaID, "Palautteen antaja", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">

                                @Html.DropDownList("KayttajaID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.KayttajaID, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Pvm, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Pvm, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Pvm, "", new { @class = "text-danger" })
                                <small id="pvmHelp" class="form-text text-muted">Valitse päivämäärä.</small>

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Palaute1, "Palaute", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Palaute1, new { htmlAttributes = new { @id = "Palaute", @class = "form-control", @maxlength = "100", @aria_describedby = "text-counter-parent"} })
                                @Html.ValidationMessageFor(model => model.Palaute1, "", new { @class = "text-danger" })
                                <div id="the-count">
                                    <span id="current">0</span>
                                    <span id="maximum">/ 500</span>
                                </div>
                                <small id="palauteHelp" class="form-text text-muted">Anna palautetta päivästäsi.</small>
                            </div>
                        </div>

                        @*KOMMENTTI MAHDOLLISUUS TYÖNTEKIJÄLLE? (Muokataan ens sprintissä?*@
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Jätä kommentti" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2"></label>
                        </div>
                    </div>

                }
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-success" form="createForm" onclick="meth_alert();"><i class="fas fa-plus-square"></i></button>
                <a href="@Url.Action("Index", "Palaute")" class="btn btn-danger"><i class="fas fa-times"></i></a>

                <script type="text/javascript">
                    meth_alert = function () {
                        swal("Uusi palaute lisätty onnistuneesti!");
                    };


                    ////Tekstin counteri
                    $('textarea').keyup(function () {

                        var characterCount = $(this).val().length,
                            current = $('#current'),
                            maximum = $('#maximum'),
                            theCount = $('#the-count');

                        current.text(characterCount);

                    });

                </script>

            </div>

        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}

