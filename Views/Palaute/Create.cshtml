@model Hyvinvointisovellus.Models.Palaute

@{
    ViewBag.Title = "Create";
}

<div class="jumbotron">
    <h1>Palautteet</h1>
    <p class="lead">
        Luo palautteita.
    </p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Palaute</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KayttajaID, "KayttajaID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("KayttajaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KayttajaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Palaute1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Palaute1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Palaute1, "", new { @class = "text-danger" })
            </div>
        </div>

        @*KOMMENTTI MAHDOLLISUUS TYÖNTEKIJÄLLE? (Muokataan ens sprintissä?*@
        <div class="form-floating">
            <textarea class="form-control" placeholder="Jätä kommentti" id="floatingTextarea2" style="height: 100px"></textarea>
            <label for="floatingTextarea2"></label>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Luo" class="btn btn-info" onclick="meth_alert();" />
                <a class="btn btn-secondary" href="/Palaute">Takaisin</a>
            </div>

            <script type="text/javascript">
                meth_alert = function () {
                    alert("Uusi palaute lisätty onnistuneesti!");
                };
            </script>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
