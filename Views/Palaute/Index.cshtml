@model IEnumerable<Hyvinvointisovellus.Models.Palaute>

@{
    ViewBag.Title = "Index";
}




@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".naytaPalaute").click(function () {
                let palauteId = $(this).data("palauteid");

            });
        });

       /* Tooltip scripti*/
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

<div class="jumbotron">
    <h1>Palautteet</h1>
    <p class="lead">
        Tarkastele palautteita.
    </p>
    @*<p><a href="~/Home/Palautteet" class="btn btn-primary btn-lg">Lue palautteita  &raquo;</a></p>*@ @*<-- jumbotronin button, tarvitaanko?*@
</div>
<p></p>
<p></p>
<div>
    @if (Session["Admin"] == null)
    {

        //Tooltip lisätty linkki buttoniin
        <a class="btn btn-info" href="/Palaute/Create" data-toggle="tooltip" data-placement="right" title="Lisää uusia palautteita">Lisää uusi palaute</a>

    }
</div>

<p></p>
<p></p>


<div class="container-fluid">
    <div class="card-header">
        <a class="card-link">
            <form>
                <div class="input-group">
                    <input style="max-width: 20%" type="text" class="form-control bg-secondary font-weight-bold px-2 text-light" value="Palautteen antaja" disabled>
                    <input style="max-width: 100%" type="text" class="form-control bg-secondary font-weight-bold px-2 text-light" value="Palaute" disabled>
                </div>
            </form>
        </a>
    </div>
    <div id="accordion">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-header">
                    <a class="card-link naytaPalaute" data-palauteId="@item.PalauteID" data-toggle="collapse" href="#collapse_@item.PalauteID">
                        <form>
                            <div class="input-group">
                                <input style="max-width: 20%" type="text" class="form-control col-6" value="@item.Kayttajat.Etunimi @item.Kayttajat.Sukunimi" disabled>
                                <input type="text" class="form-control col-12" value="@item.Palaute1" style="text-overflow: ellipsis; max-width:80%" disabled>
                            </div>
                        </form>
                    </a>
                </div>
                <div id="collapse_@item.PalauteID" class="collapse" data-parent="#accordion">
                    <div class="card-body">
                        <p>@item.Palaute1</p>
                        @*<div id="kokoPalaute_@item.PalauteID"></div>*@
                    </div>
                </div>
            </div>
        }

    </div>
</div>





